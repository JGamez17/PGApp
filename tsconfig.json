{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "app/components/*"
      ]
    },
    "allowJs": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}